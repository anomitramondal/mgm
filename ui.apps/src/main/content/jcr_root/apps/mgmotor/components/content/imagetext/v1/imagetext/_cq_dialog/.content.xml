<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Image Text"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[suntrust.global.components.imagetext.v1.editor]"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Text &amp; Image - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <imagetab
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Image"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <style
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Select display style"
                                                fieldLabel="Select Style"
                                                name="./style">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <imagetext
                                                        granite:hide="${cqDesign.disableImageText}"
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Image Text"
                                                        value="imagetext"/>
                                                    <imageonly
                                                        granite:hide="${cqDesign.disableImageOnly}"
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Image Only"
                                                        value="imageonly"/>
                                                    <textonly
                                                        granite:hide="${cqDesign.disableTextOnly}"
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Text Only"
                                                        value="textonly"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"/>
                                            </style>
                                            <title
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Enter title to be displayed"
                                                fieldLabel="Title"
                                                name="./title"/>
                                            <file
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fileNameParameter="./fileName"
                                                fileReferenceParameter="./fileReference"
                                                mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff]"
                                                multiple="{Boolean}false"
                                                name="./file"
                                                title="Upload Image Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                            <alttext
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral//foundation/form/textfield"
                                                fieldDescription="Alt text for image"
                                                fieldLabel="Alt Text"
                                                maxlength="{Long}100"
                                                name="./alttext"/>
                                            <url
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                fieldDescription="Set the navigation url"
                                                fieldLabel="Url"
                                                name="./linkURL"
                                                rootPath="/content"/>
                                            <target
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Sets the window target for the link"
                                                fieldLabel="Target"
                                                name="./target">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <self
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Same Window"
                                                        value="_self"/>
                                                    <blank
                                                        jcr:primaryType="nt:unstructured"
                                                        text="New Window"
                                                        value="_blank"/>
                                                    <smallmodal
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Small Modal"
                                                        value="_smallmodal"/>
                                                    <mediummodal
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Medium Modal"
                                                        value="_mediummodal"/>
                                                    <largemodal
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Large Modal"
                                                        value="_largemodal"/>
                                                </items>
                                            </target>
                                            <urlParams
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Url Params provided should be concatenated onto the url e.g. /path/to/url?param1=value1&amp;param2=value2"
                                                fieldLabel="Url Params"
                                                name="./urlParams"/>
                                            <anchorTag
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Sets an anchor tag thatâ€™s applied to the url e.g. /path/to/url#tag"
                                                fieldLabel="Anchor Tag"
                                                name="./anchorTag"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </imagetab>
                    <texttab
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Text"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <textcontent
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral//foundation/form/textarea"
                                                fieldDescription="Enter Text Content Here"
                                                fieldLabel="Text Content"
                                                name="./textcontent"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </texttab>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
